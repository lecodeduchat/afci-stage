{% extends '/admin/base.html.twig' %}

{% block javascripts %}
    <script src="/assets/js/adminuser.js" defer></script>
{% endblock %}

{% block title %}Index des patients{% endblock %}

{% block body %}
  <div class="container">
  {% include('admin/_partials/_menu.html.twig') %}
    <div class="cares_container">
    <h1>Index des Patients</h1>
    <div class="btn_index_admin">
    <a href="{{ path('users_new') }}" class="btn">Nouveau patient</a></div>
    <table class="table_admin">
        <thead class="thead_admin">
            <tr>
                <th>Id</th>
                <th>E-mail</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Téléphone</th>
                <th>Téléphone Mobile</th>
                <th>Bloqué</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in pagination %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td class="homePhone">{{ user.homePhone }}</td>
                <td class="cellPhone">{{user.cellPhone}}</td>
                <td>{{ user.isBlocked ? 'Oui' : 'Non' }}</td>
                <td>
                    <div class="btn_action">
                    <a href="{{ path('users_show', {'id': user.id}) }}"><i class="fa-regular fa-eye"></i></a>
                    <a href="{{ path('users_edit', {'id': user.id}) }}"><i class="fa-regular fa-pen-to-square"></i></a>
                    {{ include('admin/users/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="20">Pas d'enregistrement trouvé</td>
            </tr>
        {% endfor %}
        
        </tbody>
    </table>
    {{knp_pagination_render(pagination)}}
    </div>
    </div>

    
{% endblock %}
