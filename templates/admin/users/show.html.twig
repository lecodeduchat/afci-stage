{% extends '/admin/base.html.twig' %}

{% block javascripts %}
    <script src="/assets/js/adminuser.js" defer></script>
{% endblock %}

{% block title %}Fiche de {{ user.firstname }} {{ user.lastname }}{% endblock %}

{% block body %}
  <div class="container">
  {% include('admin/_partials/_menu.html.twig') %}
    <div class="cares_container">
    <h1>Fiche de {{ user.firstname }} {{ user.lastname }}</h1>

    <table class="table_admin_show">
        <tbody class="tbody_show">
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>E-mail:</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Prénom:</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Téléphone Maison:</th>
                <td class="homePhone">{{ user.homePhone }}</td>
            </tr>
            <tr>
                <th>Téléphone Mobile:</th>
                <td class="cellPhone">{{ user.cellPhone }}</td>
            </tr>
            <tr>
                <th>Bloqué:</th>
                <td>{{ user.isBlocked ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="a_back_cares">
    <a href="{{ path('users_index') }}">Retour</a>
    </div>

    </div>
    </div>
{% endblock %}
