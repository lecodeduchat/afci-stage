{% extends '/admin/base.html.twig' %}

{% block title %}index des séances{% endblock %}

{% block body %}

    <div class="container ">
  {% include('admin/_partials/_menu.html.twig') %}
    <div class="cares_container">
    <h1>L'index des séances</h1>

    <table class="table" height="400px" style="text-align:center" >
        <thead >
            <tr colspan="3">
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Durée</th>
                <th>Couleur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for care in cares %}
            <tr>
                <td>{{ care.id }}</td>
                <td>{{ care.name }}</td>
                <td>{{ care.price }}</td>
                <td>{{ care.duration ? care.duration|date('H:i:s') : '' }}</td>
                <td ><span class="color_care" style="color:{{ care.color }}">
											<i class="fa-solid fa-circle rond"></i>
										</span></td>
                <td>
                    <a href="{{ path('cares_show', {'id': care.id}) }}" ><i class="fa-regular fa-eye"></i></a>
                    <a href="{{ path('cares_edit', {'id': care.id}) }}"><i class="fa-regular fa-pen-to-square"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        <div class="btn_indexcares">
				<a href="{{ path('cares_new')}}" class="btn">Ajout séance</a>
			</div>
  
    </div>
    </div>
{% endblock %}
