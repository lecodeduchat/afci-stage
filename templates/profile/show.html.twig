{% extends 'base.html.twig' %}

{% block title %}Votre profil
{% endblock %}

{% block body %}
	<div class="container">
		<div class="content content">
			<h2>Votre profil</h2>
			<table class="edition_profile">
				<tbody>
					<tr>
						<td>Nom</td>
						<td>{{ user.firstname }}</td>
					</tr>
					<tr>
						<td>Prénom</td>
						<td>{{ user.lastname }}</td>
					</tr>
					<tr>
						<td>Email</td>
						<td>{{ user.email }}</td>
					</tr>
					<tr>
						<td>Adresse</td>
						<td>{{ user.address }}</td>
					</tr>
					<tr>
						<td>Code postal</td>
						<td>{{ user.zipcode }}</td>
					</tr>
					<tr>
						<td>Ville</td>
						<td>{{ user.city }}</td>
					</tr>
					<tr>
						<td>Téléphone</td>
						<td>{{ user.phone }}</td>
					</tr>
					<tr>
						<td>Date de naissance</td>
						<td>{{ user.birthday|date("d/m/Y") }}</td>
					</tr>
					<tr>
						<td>Mot de passe</td>
						<td>Changer le mot de passe</td>
					</tr>
				</tbody>

			</table>
			<div class="edition_profile_action">
				<a href="{{ path('profile_edit') }}" class="btn btn-primary">Modifier votre profil</a>
			</div>
		</div>
	</div>
{% endblock %}
