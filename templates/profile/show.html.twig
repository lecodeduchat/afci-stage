{% extends 'base.html.twig' %}

{% block title %}Votre profil
{% endblock %}

{% block body %}
	<div class="container">
		<div class="content content">
			<h2>Votre profil</h2>
			<table class="edition_profile">
				<tbody>
					<tr>
						<td>Nom</td>
						<td>{{ user.firstname }}</td>
					</tr>
					<tr>
						<td>Prénom</td>
						<td>{{ user.lastname }}</td>
					</tr>
					<tr>
						<td>Email</td>
						<td>{{ user.email }}</td>
					</tr>
					<tr>
						<td>Adresse</td>
						<td>{{ user.address }}</td>
					</tr>
					<tr>
						<td>Code postal</td>
						<td>{{ user.zipcode }}</td>
					</tr>
					<tr>
						<td>Ville</td>
						<td>{{ user.city }}</td>
					</tr>
					<tr>
						<td>Téléphone</td>
						<td>{{ user.phone }}</td>
					</tr>
					<tr>
						<td>Date de naissance</td>
						<td>{{ user.birthday|date("d/m/Y") }}</td>
					</tr>
					<tr>
						<td>Mot de passe</td>
						<td>Changer le mot de passe</td>
					</tr>
				</tbody>
			</table>
			<div class="edition_profile_action">
				<a href="{{ path('profile_edit') }}" class="btn btn-primary">Modifier votre profil</a>
			</div>
			{# Je teste le tableau childs pour savoir si l'utilisateur à déjà des enfants #}
			{% if childs %}
				<h2>Enfant(s)</h2>
				<table>
					<thead>
						<tr>
							<th>Prénom</th>
							<th>Date de naissance</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for child in childs %}
							<tr>
								<td>{{ child.firstname }}</td>
								<td>{{ child.birthday|date("d/m/Y") }}</td>
								<td>
									<a href="{{ path('app_childs_edit' , {id: child.id}) }}">Modifier</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<div class="edition_profile_action">
					<a href="{{ path('app_childs_new') }}" class="btn btn-primary">Ajouter un enfant</a>
				</div>
			{% else %}
				<h2>Enfant</h2>
				<p>Vous n'avez pas encore d'enfant, ajoutez-en un pour pouvoir réserver une séance.</p>
				<div class="edition_profile_action">
					<a href="{{ path('app_childs_new') }}" class="btn btn-primary">Ajouter un enfant</a>
				</div>
			{% endif %}
		</div>
	</div>
{% endblock %}
