{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="/assets/css/_partials/form.css">
{% endblock %}

{% block title %}Votre profil
{% endblock %}

{% block body %}
	<div class="container">
		<div class="content content">
			<h2>Modifier votre profil</h2>
			<div class="form_users-bg bg-white">
				<div class="form_users edit_user">
					{{ form_start(userForm) }}
					{{ form_row(userForm.firstname) }}
					{{ form_row(userForm.lastname) }}
					{{ form_row(userForm.birthday) }}
					{{ form_row(userForm.email) }}
					{# {{ form_row(userForm.home_phone) }} #}
					{{ form_row(userForm.cell_phone) }}
					{{ form_row(userForm.address) }}
					{{ form_row(userForm.zipcode) }}
					{{ form_row(userForm.city) }}
					<div class="hidden">
						{{ form_row(userForm.country) }}
						{{ form_row(userForm.RGPDConsent) }}
						{{ form_row(userForm.plainPassword, {label: 'Mot de passe'}) }}
					</div>
					<button type="submit" class="btn btn-inscription">Mettre Ã  jour mon profil</button>
					{{ form_end(userForm) }}
				</div>
			</div>

		</div>
	</div>
{% endblock %}
