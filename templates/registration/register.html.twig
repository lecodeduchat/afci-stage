{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="/assets/css/_partials/form.css">
	<link rel="stylesheet" href="/assets/css/pages/register.css">
{% endblock %}


{% block javascripts %}
	<script src="/assets/js/register.js" defer></script>
{% endblock %}


{% block title %}Inscription
{% endblock %}

{% block body %}

	<div class="container container_register">
		<div class="content content_register">
			<h3>Inscription - Identifiez-vous</h3>
			<div class="text-default">Votre réservation n'est pas encore validée.</div>
			<div class="tabs">
				<div class="tabs_item">
					<a href="{{ path('app_login')}}">J'ai déjà un compte</a>
				</div>

				<div class="tabs_item active">Je crée mon compte</div>
			</div>
			<div class="form_users-bg bg-white">
				<div class="registration">
					<h3>Êtes-vous patient du cabinet ?</h3>
					<div class="registration_items">
						<div class="registration_item-radio">
							<input class="registration-radio" type="radio" name="registration" id="registration_no" value="no" checked>
							<label for="registration_no">Non</label>
						</div>
						<div class="registration_item-radio">
							<input class="registration-radio" type="radio" name="registration" id="registration_yes" value="yes">
							<label for="registration_yes">Oui</label>
						</div>
					</div>
				</div>
				<div class="form_patients">
					<h3>Recevoir un email avec un lien temporaire afin de créer votre espace patient.</h3>
					{{ form_start(patientsSearchForm) }}
					{{ form_row(patientsSearchForm.email) }}
					{{ form_row(patientsSearchForm.firstname) }}
					{{ form_row(patientsSearchForm.lastname) }}
					<button type="submit" class="btn btn-inscription">Envoyer</button>
					{{ form_end(patientsSearchForm) }}
				</div>

				<div class="form_users">
					{{ form_start(registrationForm) }}
					{{ form_row(registrationForm.firstname) }}
					{{ form_row(registrationForm.lastname) }}
					{{ form_row(registrationForm.birthday) }}
					<div class="error birthday danger"></div>
					{{ form_row(registrationForm.email) }}
					<div class="error email danger"></div>
					{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
					{# {{ form_row(registrationForm.home_phone) }} #}
					{{ form_row(registrationForm.cell_phone) }}
					{{ form_row(registrationForm.address) }}
					{{ form_row(registrationForm.zipcode) }}
					{{ form_row(registrationForm.city) }}
					{{ form_row(registrationForm.country) }}
					{{ form_row(registrationForm.RGPDConsent) }}

					<button type="submit" class="btn btn-inscription">M'inscrire</button>
					{{ form_end(registrationForm) }}
				</div>
			</div>
		</div>
	</div>

{% endblock %}
